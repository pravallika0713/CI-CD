pipeline {
  agent {
    docker {
       image 'ubuntu:latest'
       args '-u root' 
       }
    
    }
  stages {
    stage('install and update package') {
      steps {
        echo "Installing and Updating package"
        sh 'apt-get'
        sh 'apt update'
      }
    }
    stage('Installing') {
      steps {
        echo "Installing Node js"
        sh ' apt install nodejs'
      }
    }
    stage('Verifying') {
        steps {
            echo "Verifying nodejs installation"
            sh 'node -v'
        }

    }
  }
}